<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrationValidate</servlet-name>
        <servlet-class>com.happyjourney.controller.RegistrationValidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>com.happyjourney.view.HomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorPage</servlet-name>
        <servlet-class>com.happyjourney.view.ErrorPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>About</servlet-name>
        <servlet-class>com.happyjourney.view.About</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BusCheck</servlet-name>
        <servlet-class>com.happyjourney.controller.BusCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainCheck</servlet-name>
        <servlet-class>com.happyjourney.controller.TrainCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarineCheck</servlet-name>
        <servlet-class>com.happyjourney.controller.MarineCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AirlineCheck</servlet-name>
        <servlet-class>com.happyjourney.controller.AirlineCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Self_JourneyCheck</servlet-name>
        <servlet-class>com.happyjourney.controller.Self_JourneyCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BusDetails</servlet-name>
        <servlet-class>com.happyjourney.view.BusDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationValidate</servlet-name>
        <url-pattern>/RegistrationValidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/Home.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorPage</servlet-name>
        <url-pattern>/Error.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>About</servlet-name>
        <url-pattern>/About</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BusCheck</servlet-name>
        <url-pattern>/buscheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainCheck</servlet-name>
        <url-pattern>/traincheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarineCheck</servlet-name>
        <url-pattern>/marinecheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AirlineCheck</servlet-name>
        <url-pattern>/airlinecheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Self_JourneyCheck</servlet-name>
        <url-pattern>/selfjourneycheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BusDetails</servlet-name>
        <url-pattern>/BusDetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
